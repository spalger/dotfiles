[user]
	name = Spencer Alger
	email = email@spalger.com

[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input

[alias]
  unstage = reset HEAD --
  co = checkout
  added = diff --cached
  last = log -1 -p --no-merges
  undo = reset HEAD^
  recommit = commit --amend --no-edit
  ql = "log --pretty=format:\"[%Cred%h%Creset][%ad] %an: %s\" --date=short -30"
  qln = "log --pretty=format:\"[%Cred%h%Creset][%ad] %an: %s\" --date=short --no-merges -30"
  qlm = "log --pretty=format:\"[%Cred%h%Creset][%ad] %an: %s\" --date=short --merges -30"
  find = log --pretty=\"format:%Cgreen%H %Cblue%s\" --name-status --graph --decorate --grep
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  div = divergence
  gn = goodness
  gnc = goodness --cached
  fa = fetch --all
  po = push origin
  pu = push upstream
  ppp = !git push origin && git push upstream
  b = branch
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  head = !git l -1
  h = !git head
  hp = "!source ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all
  todo = grep --heading --break --ignore-case -e ' FIX: *' -e ' TODO: *'
  pr = "!f() { git co -q master; git branch -Dq pr/$1; git fetch upstream pull/$1/head:pr/$1 && git co -q pr/$1; }; f"
  clear-pr = !git branch | grep pr/ | xargs "git branch -D"
  apr = apply-pr

[push]
	default = current

[credential]
	helper = osxkeychain

[format]
	pretty = format:[%Cgreen%h%Creset][%ad] %an: %s

[diff]

[color]
  ui = auto

[log]
	date = short

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f

[push]
  default = current
